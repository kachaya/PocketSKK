<resources>

    <style name="SymbolButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/button_height</item>

        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">@dimen/symbol_button_text_size</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">0dp</item>
        <item name="android:paddingEnd">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>

        <item name="android:layout_weight">1</item>
    </style>

    <style name="CandidateButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/button_height</item>

        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>

        <item name="android:textSize">@dimen/candidate_button_text_size</item>

        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>

        <item name="android:minWidth">0dp</item>
        <item name="android:maxWidth">480dp</item>
        <item name="android:maxLines">1</item>
    </style>
</resources>